<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="nyc.c4q.enough.help.HelpFragment">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/timeswire_recycler"
        android:layout_width="match_parent"
        android:layout_height="316dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@id/distress_edit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/start_addContact_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="add+"
        app:layout_constraintBottom_toTopOf="@+id/timeswire_recycler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.79" />

    <TextView
        android:id="@+id/contacts_tv"
        android:layout_width="204dp"
        android:layout_height="37dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="Trusted Contacts"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/timeswire_recycler"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.839" />

    <TextView
        android:id="@+id/distress_description_tv"
        android:layout_width="211dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:text="@string/help_frag_desc_tv"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeswire_recycler" />

    <EditText
        android:id="@+id/distress_edit"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:text="@string/distress_message"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/distress_description_tv"
        tools:layout_editor_absoluteX="16dp" />

    <ImageView
        android:id="@+id/edit_distress_message_iv"
        android:layout_width="24dp"
        android:layout_height="29dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/ic_create_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.765"
        app:layout_constraintStart_toEndOf="@+id/distress_description_tv"
        app:layout_constraintTop_toBottomOf="@+id/timeswire_recycler" />


</android.support.constraint.ConstraintLayout>
